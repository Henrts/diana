{
  "name": "@henrts/diana",
  "repository": {
    "type": "git",
    "url": "https://github.com/Henrts/diana"
  },
  "version": "2.0.0",
  "license": "MIT",
  "private": true,
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "watch": "rollup -cw",
    "storybook": "start-storybook -p 6006 -s ./public",
    "build-storybook": "build-storybook -s public",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prettier": "prettier '**/*.{js,jsx,tx,tsx,json,md,scss,yaml,yml,mdx}' --write",
    "new-package": "ts-node ./scripts/new-package.ts",
    "build:root": "yarn clear:files && tsc -p tsconfig.root.json && copyfiles -f modules/assets/custom.d.ts dist/assets && copyfiles -f modules/assets/icons/* dist/assets/icons",
    "clear:files": "rimraf dist",
    "generate:icons": "ts-node scripts/update-icons"
  },
  "lint-staged": {
    "*.{js,jsx,tx,tsx}": [
      "yarn run lint-fix",
      "yarn run prettier",
      "git add"
    ],
    "*.{js,jsx,tx,tsx,json,md,scss,yaml,yml}": [
      "yarn run prettier",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/plugin-transform-react-jsx": "^7.7.7",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.8.3",
    "@mdx-js/loader": "^1.5.3",
    "@storybook/addon-actions": "^5.3.8",
    "@storybook/addon-docs": "^5.3.8",
    "@storybook/addon-info": "^5.3.8",
    "@storybook/addon-links": "^5.3.8",
    "@storybook/addons": "^5.3.8",
    "@storybook/react": "^5.3.8",
    "@testing-library/react": "^9.4.0",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/inquirer": "^6.5.0",
    "@types/mustache": "^4.0.0",
    "@types/react": "^16.9.17",
    "@types/react-transition-group": "^4.2.3",
    "@types/yup": "^0.26.28",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.13.0",
    "awesome-typescript-loader": "^5.2.1",
    "chrome-launcher": "^0.12.0",
    "commitizen": "^4.0.3",
    "copyfiles": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-mdx": "^1.6.5",
    "eslint-plugin-react": "^7.15.1",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.1.0",
    "inquirer": "^7.0.4",
    "lerna": "^3.20.2",
    "lint-staged": "^9.5.0",
    "loki": "^0.18.1",
    "mustache": "^4.0.0",
    "node-sass": "^4.13.0",
    "react-docgen-typescript-loader": "^3.6.0",
    "react-svg-loader": "^3.0.3",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.0",
    "svg-inline-loader": "^0.8.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@babel/core": "^7.8.4",
    "babel-eslint": "7.2.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-external-helpers": "6.18.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-runtime": "6.26.0",
    "prettier": "prettier/prettier",
    "yup": "^0.28.0"
  },
  "resolutions": {
    "chrome-launcher": "^0.12.0"
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.app",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      },
      "chrome.iphone7": {
        "target": "chrome.app",
        "preset": "iPhone 7"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
