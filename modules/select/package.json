{
  "name": "@diana-ui/select",
  "version": "0.0.42",
  "main": "lib/index.js",
  "module": "module/index.js",
  "files": [
    "lib",
    "module"
  ],
  "license": "MIT",
  "scripts": {
    "build": "yarn compile:lib && yarn compile:module",
    "compile:lib": "tsc --target es5 --module commonjs --outDir lib",
    "compile:module": "tsc --target es6 --module esnext --outDir module",
    "clean:files": "rimraf lib module",
    "prepare": "yarn clean:files && yarn build",
    "watch": "npm-watch"
  },
  "peerDependencies": {
    "react": "^^16.12.0"
  },
  "dependencies": {
    "@diana-ui/base": "^0.1.20",
    "@diana-ui/chip": "^0.2.21",
    "@diana-ui/dropdown": "^0.1.70",
    "@diana-ui/hooks": "^0.1.31",
    "@diana-ui/icon": "^0.2.14",
    "@diana-ui/popover": "^0.1.59",
    "@diana-ui/types": "^0.1.14"
  },
  "publishConfig": {
    "access": "public"
  },
  "watch": {
    "prepare": {
      "runOnChangeOnly": true,
      "extensions": "ts,tsx",
      "ignore": [
        "lib",
        "node_modules",
        "module"
      ],
      "patterns": [
        "."
      ]
    }
  }
}
