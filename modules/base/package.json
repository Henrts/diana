{
  "name": "@diana-ui/base",
  "version": "1.0.1",
  "main": "lib/index.js",
  "module": "module/index.js",
  "license": "MIT",
  "files": [
    "lib",
    "module"
  ],
  "scripts": {
    "build": "yarn compile:lib && yarn compile:module",
    "compile:lib": "tsc --target es5 --module commonjs --outDir lib",
    "compile:module": "tsc --target es6 --module esnext --outDir module",
    "clean:files": "rimraf lib module",
    "prepare": "yarn clean:files && yarn build",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "@types/extend": "^3.0.1",
    "@types/uuid": "^3.4.6"
  },
  "peerDependencies": {
    "react": "^16.12.0"
  },
  "dependencies": {
    "@diana-ui/tokens": "^1.0.1",
    "@diana-ui/types": "^1.0.1",
    "aesthetic": "^5.1.0",
    "aesthetic-react": "^2.1.0",
    "aesthetic-utils": "3.0.1",
    "aphrodite": "^2.4.0",
    "extend": "^3.0.2",
    "hoist-non-react-statics": "^3.3.2",
    "react-registry": "^0.5.0",
    "uuid": "^3.4.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "watch": {
    "prepare": {
      "runOnChangeOnly": true,
      "extensions": "ts,tsx",
      "ignore": [
        "lib",
        "node_modules",
        "module"
      ],
      "patterns": [
        "."
      ]
    }
  }
}
