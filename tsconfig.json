{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "build",
    "dist",
    "**/**.story.*",
    "**/lib",
    "**/module",
    "**/**.d.ts",
    "**/babel.config.js"
  ]
}
